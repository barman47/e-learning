                        <span id="adminUsernameErrorMessage" class="helper-text red-text text-darken-2" data-error="Invalid ID username!">{{adminUsernameError}}</span>
                    </div>
                </div>
            
                <div class="col s12">
                    <div class="input-field">
                        <i class="mdi mdi-lock-outline prefix form-icons"></i>
                        <input type="password" id="adminPassword" name="adminPassword" class="validate">
                        <label for="adminPassword">Password</label>
                        <span  id="adminPasswordErrorMessage" class="helper-text red-text text-darken-2" data-error="Please provide your password!">{{adminPasswordError}}</span>
                    </div>
                </div>
            </div>
            <div class="center-align input-field">
                <button id="adminLoginButton" type="submit">Log in</button>
            </div>
            <br>
        </form>
    </div>
</div>

