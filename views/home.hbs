<div id="admin-modal" class="modal">
    <div class="modal-content">
        <div class="row container" id="adminPreloader">
            <div class="col s12">
                <div class="progress">
                    <div class="indeterminate"></div>
                </div>
            </div>
        </div>
        <form id="adminLogin" name="adminLogin" method="POST" action="/admins/login">
            {{#if adminErrors}}
                {{#each adminErrors}}
                    <div>
                        <p class="red-text text-darken-2 error-messages center">{{this.msg}}</p>
                    </div>
                {{/each}}
            {{/if}}
            {{#if adminLoginError}}
